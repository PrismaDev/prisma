<script type="text/underscore-template" id="layout-template">
	<div class="container-fluid">
		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<span class="brand">PrISMA</span>
				<% if (!loggedIn) { %>
					<ul class="nav pull-right">
						<li class="dropdown">
  							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
								Login
								<b class="caret"></b>
							</a>
							<div class="dropdown-menu">
								<form>
									<label for="username"><%= str.get('matriculaLabel') %></label>
									<input type="text" name="matricula" />
									<label for="password"><%= str.get('passwordLabel') %></label>
									<input type="password" name="password" />
									<input class="btn pull-right" type="submit" value="<%= str.get('submitButtonLabel') %>" />
								</form>
							</div>
						</li>
					</ul>
				<% } else { %>
					<ul class="nav pull-right">
						<li class="dropdown">
  							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
								<%= hiStr %>, <%= user.name %>
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><a href="#"><%= logoutStr %></a></li>	
							</ul>
						</li>
					</ul>
				<% } %>
			</div>
		</div>	
				
		<div class="row-fluid" id="content-div">
		</div>
		
		<hr>	
		<div class="row-fluid">
			<div id="main-footer-div" class="span12">
				<p>A footer</p>
			</div>
		</div>
	</div>
</script>

