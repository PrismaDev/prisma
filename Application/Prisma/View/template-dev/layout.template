<script type="text/underscore-template" id="layout-template">
	<div class="container-fluid">
		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<span class="brand">PrISMA</span>
				<% if (!str.user) { %>
					<ul class="nav pull-right">
						<li class="dropdown">
  							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
								Login
								<b class="caret"></b>
							</a>
							<div class="dropdown-menu">
								<form>
									<label for="username"><%= str.matriculaLabel %></label>
									<input type="text" name="matricula" />
									<label for="password"><%= str.passwordLabel %></label>
									<input type="password" name="password" />
									<input type="submit" value="<%= str.submitButtonLabel %>" />
								</form>
							</div>
						</li>
					</ul>
				<% } else { %>
					<div class="dropdown pull-right">
  						<a class="dropdown-toggle" data-toggle="dropdown" href="#">
							<%= hiStr %>,<%=user.name %>
						</a>
						<a href="#"><%= logoutStr %></a>
					</div>
				<% } %>
			</div>
		</div>	
				
		<div id="content-div">
		</div>
		
		<hr>	
		<div class="row-fluid">
			<div id="main-footer-div" class="span12">
				<p>A footer</p>
			</div>
		</div>
	</div>
</script>

