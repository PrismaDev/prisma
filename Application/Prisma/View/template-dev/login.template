<script type="text/underscore-template" id="login-template">
	<% if (error && error!='invalidLogin') { %>
		<div class="row-fluid">
			<div class="span6 offset3">
				<div class="alert alert-error centered">
					<%= error=='accessDenied'? loginStr.get('accessDeniedErrorMsg') : '' %>
					<%= error=='pageDoesNotExist'? loginStr.get('pageDoesNotExistErrorMsg') : '' %>
					<%= error=='unexpectedError'? loginStr.get('unexpectedErrorMsg') : '' %>
				</div>
			</div>
		</div>
	<% } %>

	<div class="row-fluid">
		<div class="span4 offset4" id="logo-div">
			<h1><%= layoutStr.get('projectNameStr') %></h1>
		</div>
	</div>

	<div id="login-container">
		<div class="row-fluid">
			<div class="span4 offset4 content">
				<%= loginStr.get('infoText') %>	
			</div>
		</div>	

		<div class="row-fluid <%= error=='invalidLogin'? '' : 'hidden' %>" id="login-form-container">
			<div class="span4 offset4 content" id="login-form">
				<form name="loginForm" method="post" action="/login">
					<input type="hidden" name="tipo" value="Aluno" />
					<div class="row-fluid">
						<div class="help-block"><%= loginStr.get('loginHelpText') %></div>
					</div>
					<div class="row-fluid">
						<% if (error=='invalidLogin') { %>
							<div class="alert alert-error">
								<%= loginStr.get('invalidLoginErrorMsg') %>
							</div>
						<% } %>
						<div class="span2 offset2">
							<label for="matricula"><%= loginStr.get('matriculaLabel') %></label>
							<input type="text" maxlength="<%= loginStr.get('matriculaMaxLength') %>" name="matricula" /><br />
							<label for="senha"><%= loginStr.get('passwordLabel') %></label><input type="password" name="senha" /><br />
						</div>
					</div>
					<div class="row-fluid">
						<input class="btn btn-inverse pull-right" type="submit" value="<%= loginStr.get('submitButtonLabel') %>" />
						<span class="help-block"><%= loginStr.get('forgotPasswordText') %></span>
					</div>
				</form>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span4 offset4">
				<button id="open-tutorial-button" type="button" class="btn btn-primary btn-block">
					<%= loginStr.get('tutorialButtonLabel')%>
				</button>
			</div>
		</div>
		
		<div class="row-fluid" id="open-login-button-container">
			<div class="span4 offset4">	
				<button id="open-login-button" type="button" class="btn btn-success btn-block">
					<%= loginStr.get('openLoginButtonLabel')%>
				</button>
			</div>
		</div>
	</div>
</script>


