include includes/dialog-mixins

script#faq-template(type="text/underscore-template")
	mixin modal-header('<%= faqStr.get("dialogTitle") %>')
	div.modal-body.faq-div
		| <% _.each(faqStr.get('questionList'), function(item) { %>
		div.faq-item
			div.question
				span <%= faqStr.get('questionStr') %>
				| <%= item.question %>
			hr
			div.answer
				span <%= faqStr.get('answerStr') %>
				| <%= item.answer %>
		| <% }); %>
script#tutorial-template(type="text/underscore-template")
	mixin modal-header('<%= layoutStr.get("tutorialStr") %>')
	div#yt-player.modal-body.tutorial-div
