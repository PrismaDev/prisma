include includes/dialog-mixins

script#suggestions-template(type="text/underscore-template")
	mixin modal-header('<%= suggestionsStr.get("dialogTitle") %>')
	form#suggestions-form(action="/api/sugestao", method="post")
		div.modal-body
			textarea.input-block-level(name="comentario")
		div.modal-footer
			input.btn.btn-danger(type="reset",value!="<%=suggestionsStr.get('resetButtonLabel') %>")
			input.btn.btn-primary.disabled(type="submit",value!="<%=suggestionsStr.get('submitButtonLabel') %>")

script#updates-template(type="text/underscore-template")
	div.modal-header
		button.close(type="button", data-dismiss="modal",aria-hidden="true")
			&times;
		h3#updates-title <%= updatesStr.get('dialogTitle') %>
		a.twitter-follow-button(href="https://twitter.com/prisma_dev",data-show-count="false",data-lang="en",
			data-show-screen-name="false") Follow @prisma_dev
	div.modal-body
		//- 350px because max-height for dialog in bootstrap is 400px
		a.twitter-timeline(href="https://twitter.com/prisma_dev", data-widget-id="352222657472770052", height="350",
			data-chrome="noheader")
			Tweets by @prisma_dev
