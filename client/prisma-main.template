<script type="text/underscore-template" id="microhorario-template">
	<div id="microhorario-filter">
		<form>
			<label>str1</label>
			<input type="text" name="subjectName" /><br/ >
			<label>str2</label>
			<input type="text" name="subjectCode" /><br/ >
			<label>str3</label>
			<input type="text" name="professorName" /><br/ >
			
			<input type="reset" id="resetQuery" />
			<input type="submit" id="submitQuery" />
		</form>
	</div>
	<div id="microhorario-results">
		<% switch(qStatus) { 
			case noQuery: %>
				<%= noQueryStr %>
		<%		break;
			case waiting: %>
				<%= waitingStr %>
		<%		break;
			default: %>
				<%= classesListTemplate %>
		<% } %>
	</div>
</script>
<script type="text/underscore-template" id="timetable-template">
	<table class="table table-bordered">
		<thead>
			<th></th>
			<% _.each(days, function(day) { %>
				<th><%= day %>
			<% }); %>
		</thead>
		<tbody>
			<%= timetableBody %>
		</tbody>
	</table>
</script>

<script type="text/underscore-template" id="faltacursar-template">
	<div id="faltacursar-subjectList">
		<table id="faltacursar-table" class="table table-bordered table-condensed">
			<thead>
				<th><%= codeStr %></th>
				<th><%= nameStr %></th>
				<th><%= termStr %></th>
				<th></th>
			</thead>
			<tbody>
				<% _.each(subjects, function(subject) { %>
					<tr>
						<td><%= subject.code %></td>
						<td><%= subject.name %></td>
						<td><%= subject.term %></td>
						<td>
							<a href="<%= subject.link %>" class="btn btn-info btn-small">
								<%= moreInfoStr %>
							</a>
						</td>
					</tr>
				<% }); %>
			</tbody>
		</table>
	</div>
	<div id="faltacursar-classesList" class="hiddenDiv">
		<%= classesListTemplate %>
	</div>
</script>
